                                        CanUserReorder="True"
                                        SortMemberPath="$WorkLoadTimeTuesday"
                                        CanUserResize="False"
                                        Width="64"
                                        Header="Вт" />
                                    <elements:DataGridAdaptiveColumn
                                        Binding="{Binding WorkLoadTimeWednesday, StringFormat='00:00'}"
                                        CanUserReorder="True"
                                        SortMemberPath="$WorkLoadTimeWednesday"
                                        CanUserResize="False"
                                        Width="64"
                                        Header="Ср" />
                                    <elements:DataGridAdaptiveColumn
                                        Binding="{Binding WorkLoadTimeThursday, StringFormat='00:00'}"
                                        Header="Чт"
                                        CanUserResize="False"
                                        SortMemberPath="$WorkLoadTimeThursday"
                                        Width="64"
                                        CanUserReorder="True" />
                                    <elements:DataGridAdaptiveColumn
                                        Binding="{Binding WorkLoadTimeFriday, StringFormat='00:00'}"
