                                        CanUserReorder="True" />
                                    <elements:DataGridAdaptiveColumn
                                        Binding="{Binding Employee.Signature}"
                                        CanUserReorder="True"
                                        SortMemberPath="$Employee"
                                        CanUserResize="False"
                                        Width="180"
                                        Header="Работник" />
                                    <DataGridTemplateColumn CanUserReorder="True" Width="*" />

                                    <DataGridTemplateColumn CanUserReorder="False" MinWidth="190">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Margin="0"
                                                            Visibility="{Binding DataContext.IsWriteRights,
                                                                Converter={StaticResource BoolVisibilityConverter},
                                                                ElementName=CardDictionaryTab}"
